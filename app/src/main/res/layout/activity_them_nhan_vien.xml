<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    tools:context=".Them_NhanVien_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:padding="15dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">


            <Button
                android:id="@+id/btnChupHinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chuphinh"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btnChonHinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chonhinh"
                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTen"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="@string/hoten"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/etTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvPhongBan"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="@string/phongban"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/etPhongBan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSDT"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="@string/sdt"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etSDT"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etEmail"
                android:text=""/>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/btnluu"
            android:id="@+id/btnLuu"
            android:layout_weight="0.4"
            android:textSize="18dp"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/btnhuy"
            android:layout_weight="0.4"
            android:id="@+id/btnQuayLai"
            android:textSize="18dp"
            android:layout_margin="15dp"/>

    </LinearLayout>

</LinearLayout>