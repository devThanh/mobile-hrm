<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgHinhDaiDien"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manv"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvHoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hoten"
            android:textSize="18dp"
            android:textColor="@color/black"/>


<!--        <TextView-->
<!--            android:id="@+id/tvSDT"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="SDT" />-->

        <TextView
            android:id="@+id/tvPhongBan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phongban"
            android:textSize="18dp"
            android:textColor="@color/black"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnsua"
                android:textSize="18dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btnXoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnxoa"
                android:textSize="18dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btnXem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnxem"
                android:textSize="18dp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>